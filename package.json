{
    "name": "okastr8",
    "module": "main.ts",
    "type": "module",
    "private": true,
    "scripts": {
        "build": "bun build src/main.ts --outdir=build --target=node",
        "lint": "eslint src scripts test *.ts",
        "lint:fix": "eslint src scripts test *.ts --fix",
        "format": "prettier . --write",
        "format:check": "prettier . --check",
        "typecheck": "tsc --noEmit -p tsconfig.check.json",
        "check": "bun run lint && bun run typecheck && bun run format:check",
        "test": "bun run test:unit && bun run test:smoke",
        "test:unit": "bun test test/unit",
        "test:smoke": "bun test test/smoke",
        "test:integration": "bun test test/integration",
        "test:e2e": "playwright test"
    },
    "devDependencies": {
        "@eslint/js": "^10.0.1",
        "@playwright/test": "^1.51.1",
        "@types/bun": "latest",
        "eslint": "^10.0.1",
        "eslint-config-prettier": "^10.1.8",
        "globals": "^17.3.0",
        "prettier": "^3.8.1",
        "typescript-eslint": "^8.56.0"
    },
    "peerDependencies": {
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "@types/js-yaml": "^4.0.9",
        "commander": "^14.0.0",
        "enquirer": "^2.4.1",
        "hono": "^4.8.5",
        "js-yaml": "^4.1.1",
        "ora": "^9.0.0",
        "yaml": "^2.8.2"
    }
}
